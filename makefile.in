SHELL = /bin/bash

tex = "_build/physik512-$(number)-Ueding_Lemmer.tex"
out = "_build/physik512-$(number)-Ueding_Lemmer.pdf"

makefile = "physik512-$(number)-Ueding_Lemmer.makefile"

all: $(out)

$(out): $(tex)
	cd _build && latexmk -pdflatex='lualatex -halt-on-error -shell-escape $$O $$S' -pdf $$(basename $<)
	if [[ -f "_build/$(makefile)" ]]; \
	    then \
	    cd _build \
	    && $(MAKE) -f "$(makefile)" \
	    && latexmk -pdflatex='lualatex -halt-on-error -shell-escape $$O $$S' -pdf $$(basename $<); \
	    fi

_build/template.js: crunch
	mkdir -p _build
	./$<

$(tex): Template.tex _build/template.js
	../insert $^ $@

.PHONY: clean
clean:
	$(RM) *.class *.jar
	$(RM) *.o *.out
	$(RM) *.pyc *.pyo
	$(RM) *.orig
	$(RM) -r _build
